record(waveform, "$(P)$(R)Acceleration") {
    field(DTYP, "asynFloat64ArrayIn")
    field(INP,  "@asyn($(PORT)) Accel")
    field(FTVL, "DOUBLE")
    field(NELM, "3")
    field(SCAN, "I/O Intr")
}

