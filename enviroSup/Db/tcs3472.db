record(mbbo, "$(P)$(R)Gain") {
    field(DTYP, "asynInt32")
    field(OUT,  "@asyn($(PORT)) Gain")
    field(ZRVL, "0")
    field(ONVL, "1")
    field(TWVL, "2")
    field(THVL, "3")
    field(ZRST, "x1 gain")
    field(ONST, "x4 gain")
    field(TWST, "x16 gain")
    field(THST, "x60 gain")
    field(NOBT, "2")
    field(MASK, "0x03")
    field(VAL,  "0")
    field(PINI, "YES")
}

